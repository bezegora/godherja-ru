		name = "idle"
		animation = "idle_animation"
		event = { time = 0.0 sound = { soundeffect = "event:/SFX/Animations/Units/Ships/Generic/sfx_anim_ship_generic_idle"} }
	}
	state = {
		name = "move"
		animation = "start_moving_animation"
		looping = no
		next_state = move_loop
